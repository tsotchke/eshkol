;;
;; Phase 1B Simple Even Test - Testing simpler even predicate
;;

(display "=== SIMPLE EVEN TEST ===")
(newline)

;; Test 1: Simple even predicate using modulo-like approach
(display "1. Testing simple even predicate:")
(newline)
(define test-nums (list 1 2 3 4 5 6))
(display "   Numbers: 1 2 3 4 5 6")
(newline)

;; Simple even? check: x - (x/2)*2 == 0 means even
;; For now, let's use a much simpler version
(define simple-even? (lambda (x) (= x 2)))
(display "   simple-even? defined (only matches 2)")
(newline)

;; Test find
(define found-two (find simple-even? test-nums))
(display "   find 2: ")
(if (null? found-two) (display "NOT FOUND") (display found-two))
(newline)

;; Test 2: Direct number comparison
(display "2. Testing direct number predicates:")
(newline)
(define is-four (lambda (x) (= x 4)))
(define found-four (find is-four test-nums))
(display "   find 4: ")
(if (null? found-four) (display "NOT FOUND") (display found-four))
(newline)

(display "=== SIMPLE EVEN TEST COMPLETE ===")
(newline)
