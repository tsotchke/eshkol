;;
;; List* (Improper List Constructor) Test
;;


(display "Testing list* function:")
(newline)

;; Test single argument (should return the argument itself)
(define single-result (list* 42))
(display "list* single arg: ") (display single-result)
(newline)

;; Test improper list construction
(define improper-list (list* 1 2 3 99))
(display "list* improper list created")
(newline)

;; Test accessing elements of improper list
(display "First element: ") (display (car improper-list))
(newline)
(display "Second element: ") (display (cadr improper-list))
(newline)
(display "Third element: ") (display (caddr improper-list))
(newline)

;; Test that the terminal is not null but the actual value
(define tail-after-third (cdr (cdr (cdr improper-list))))
(display "Terminal (should be 99): ") (display tail-after-third)
(newline)

;; Test list* with proper list terminal
(define mixed-list (list* 10 20 (list 30 40)))
(display "list* with list terminal:")
(newline)
(display "First: ") (display (car mixed-list))
(newline)
(display "Second: ") (display (cadr mixed-list))
(newline)
(display "Third: ") (display (caddr mixed-list))
(newline)

(display "List* test completed!")
(newline)
