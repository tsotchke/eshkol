;;
;; Gradual Higher-Order Functions Test
;; Adding complexity step by step
;;

(require stdlib)

;; Step 1: Test make-list with different parameters
(display "Step 1: Testing make-list variants")
(newline)

(define zeros (make-list 3 0))
(display "make-list 3 zeros: ")
(display (car zeros))
(display " (length: ") (display (length zeros)) (display ")")
(newline)

(define ones (make-list 2 1))  
(display "make-list 2 ones: ")
(display (car ones)) (display " ") (display (cadr ones))
(newline)

;; Step 2: Test member function
(display "Step 2: Testing member")
(newline)

(define test-list (list 10 20 30))
(display "Created test-list: ")
(display (car test-list)) (display " ") (display (cadr test-list)) (display " ") (display (caddr test-list))
(newline)

(define found (member 20 test-list))
(display "member 20 found: ")
(display (null? found))
(newline)

(display "Gradual test completed!")
(newline)
