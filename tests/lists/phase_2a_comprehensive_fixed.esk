;;
;; Phase 2A Comprehensive Fixed - All tests with unique variable names
;;


(display "=== PHASE 2A COMPREHENSIVE TEST ===")
(newline)

;; Test 1: Basic multi-list map with addition
(display "1. Testing multi-list map with addition:")
(newline)
(define first-list (list 1 2 3))
(define second-list (list 4 5 6))
(display "   List 1: 1 2 3")
(newline)
(display "   List 2: 4 5 6")
(newline)

(define basic-result (map + first-list second-list))
(display "   map + result: ")
(if (null? basic-result)
    (display "EMPTY")
    (begin
        (display (car basic-result)) (display " ")
        (display (cadr basic-result)) (display " ")
        (display (caddr basic-result))
    ))
(newline)

;; Test 2: Multi-list map with different lengths (stops at shortest)
(display "2. Testing multi-list map with different lengths:")
(newline)
(define short-data (list 10 20))
(define long-data (list 1 2 3 4 5))
(display "   Short list: 10 20")
(newline)
(display "   Long list: 1 2 3 4 5")
(newline)

(define length-result (map + short-data long-data))
(display "   map + result (should have 2 elements): ")
(if (null? length-result)
    (display "EMPTY")
    (begin
        (display (car length-result)) (display " ")
        (display (cadr length-result))
    ))
(newline)

;; Test 3: Three lists
(display "3. Testing three-list map:")
(newline)
(define third-data (list 100 200 300))
(display "   List 3: 100 200 300")
(newline)

(define triple-result (map + first-list second-list third-data))
(display "   map + three lists result: ")
(if (null? triple-result)
    (display "EMPTY")
    (begin
        (display (car triple-result)) (display " ")
        (display (cadr triple-result)) (display " ")
        (display (caddr triple-result))
    ))
(newline)

(display "=== PHASE 2A COMPREHENSIVE SUCCESS! ===")
(newline)
