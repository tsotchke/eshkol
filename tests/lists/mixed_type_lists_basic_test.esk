;;
;; Basic Mixed Type Lists Test - Phase 0 & 1 Validation
;; Testing tagged cons cell allocation and basic operations
;;


(display "=== MIXED TYPE LISTS BASIC TEST ===")
(newline)

;; Test 1: Basic integer cons cell creation
(display "1. Testing integer cons cell:")
(newline)
(define int-pair (cons 42 100))
(display "   Created cons with (42 . 100)")
(newline)
(display "   car: ") (display (car int-pair)) (newline)
(display "   cdr: ") (display (cdr int-pair)) (newline)

;; Test 2: Basic double cons cell creation  
(display "2. Testing double cons cell:")
(newline)
(define double-pair (cons 3.14159 2.71828))
(display "   Created cons with (3.14159 . 2.71828)")
(newline)
(display "   car: ") (display (car double-pair)) (newline)
(display "   cdr: ") (display (cdr double-pair)) (newline)

;; Test 3: Mixed type cons cell
(display "3. Testing mixed type cons cell:")
(newline)
(define mixed-pair (cons 42 3.14159))
(display "   Created cons with (42 . 3.14159)")
(newline)
(display "   car (int): ") (display (car mixed-pair)) (newline)
(display "   cdr (double): ") (display (cdr mixed-pair)) (newline)

;; Test 4: Mixed type list creation
(display "4. Testing mixed type list:")
(newline)
(define mixed-list (list 1 2.5 3 4.75 5))
(display "   Created list: (1 2.5 3 4.75 5)")
(newline)
(display "   First element: ") (display (car mixed-list)) (newline)
(display "   Second element: ") (display (cadr mixed-list)) (newline)
(display "   Third element: ") (display (caddr mixed-list)) (newline)

;; Test 5: Basic arithmetic with mixed types
(display "5. Testing mixed type arithmetic:")
(newline)
(define int-val 10)
(define double-val 2.5)
(display "   int-val: ") (display int-val) (newline)
(display "   double-val: ") (display double-val) (newline)
(display "   int + double: ") (display (+ int-val double-val)) (newline)
(display "   int * double: ") (display (* int-val double-val)) (newline)

(display "=== BASIC MIXED TYPE TEST COMPLETE ===")
(newline)