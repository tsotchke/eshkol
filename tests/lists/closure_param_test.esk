;;; Test capturing function parameters in closures

;; Simple case: capture a numeric parameter
(define (make-adder n)
  (lambda (x) (+ x n)))

(define add5 (make-adder 5))
(display "add5 10 = ")
(display (add5 10))  ; should be 15
(newline)

;; Harder case: capture a function parameter
(define (apply-twice f)
  (lambda (x) (f (f x))))

(define double (lambda (x) (* x 2)))
(define quadruple (apply-twice double))
(display "quadruple 3 = ")
(display (quadruple 3))  ; should be 12
(newline)

(display "Done!")
(newline)
