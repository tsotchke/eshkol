;; Exact structure from vmap_simple
(require stdlib)

(define (lists-any-null? lists)
  (if (null? lists)
      #f
      (if (null? (car lists))
          #t
          (lists-any-null? (cdr lists)))))

(define (all-cars lists)
  (if (null? lists)
      '()
      (cons (car (car lists))
            (all-cars (cdr lists)))))

(define (all-cdrs lists)
  (if (null? lists)
      '()
      (cons (cdr (car lists))
            (all-cdrs (cdr lists)))))

(define (vmap proc . lists)
  (display "vmap called, lists=")
  (display lists)
  (newline)
  (if (lists-any-null? lists)
      (begin
        (display "  -> base case")
        (newline)
        '())
      (begin
        (display "  -> recursive case")
        (newline)
        (define cars (all-cars lists))
        (display "  cars=")
        (display cars)
        (newline)
        (define cdrs (all-cdrs lists))
        (display "  cdrs=")
        (display cdrs)
        (newline)
        (define first-result (apply proc cars))
        (display "  first-result=")
        (display first-result)
        (newline)
        (define rest-args (cons proc cdrs))
        (display "  rest-args=")
        (display rest-args)
        (newline)
        (cons first-result
              (apply vmap rest-args)))))

(display "Starting test")
(newline)
(define (double x) (* x 2))
(display (vmap double (list 1 2)))
(newline)
