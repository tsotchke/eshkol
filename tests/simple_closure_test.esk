; Test 1: Simple make-adder
(define (make-adder n)
  (lambda (x) (+ x n)))

(display "Test 1: make-adder")
(newline)
(define add5 (make-adder 5))
(display "add5 defined")
(newline)
(display "add5 10 = ")
(display (add5 10))
(newline)

(display "Done")
(newline)
