;;; Boolean combinators for predicates

(provide negate all? none?)

;;; negate: Negate a predicate
(define (negate pred)
  (lambda (x) (not (pred x))))

;;; all?: Do all elements satisfy the predicate?
(define (all? pred lst)
  (or (null? lst)
      (and (pred (car lst))
           (all? pred (cdr lst)))))

;;; none?: Do no elements satisfy the predicate?
(define (none? pred lst)
  (all? (negate pred) lst))
